<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blueberry.media.LoginActivity">
    <LinearLayout
        android:id="@+id/lv_ll_fv"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="10"
            android:text="分辨率"
            android:textColor="#333333"
            android:padding="15dp"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/ej_tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:padding="15dp"
            android:gravity="center_vertical"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ej_ic_arrow"
            android:padding="15dp"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ServiceIP"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务器地址"
            android:textColor="#333333"
            android:padding="15dp"
            android:gravity="center_vertical"
            />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittextSerIP"
        android:hint="服务器地址"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/UserName"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textColor="#333333"
            android:padding="15dp"
            android:gravity="center_vertical"
            />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittextName"
        android:hint="用户名"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/UserPass"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:textColor="#333333"
            android:padding="15dp"
            android:gravity="center_vertical"
            />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittextPass"
        android:password="true"
        android:hint="密码"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ServiceName"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务名称"
            android:textColor="#333333"
            android:padding="15dp"
            android:gravity="center_vertical"
            />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittextSerName"
        android:hint="服务名称"
        />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/VideoIP"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="流媒体地址"
            android:textColor="#333333"
            android:padding="15dp"
            android:gravity="center_vertical"
            />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittextVedioIP"
        android:hint="流媒体服务器地址"
        />
    </LinearLayout>
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:checked="false"
            android:text="记住用户信息" />
    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="登陆"
        />
</LinearLayout>
